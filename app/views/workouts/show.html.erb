<p id="notice"><%= notice %></p>

<p>
  <strong>Date:</strong>
  <%= @workout.date %>
</p>

<p>
  <strong>Name:</strong>
  <%= @workout.name %>
</p>

<p>
  <strong>Energy:</strong>
  <%= @workout.energy %>
</p>

<p>
  <strong>Length:</strong>
  <%= @workout.length %>
</p>

<p>
  <strong>Time of day:</strong>
  <%= @workout.time_of_day %>
</p>

<h4>Exercises</h2> 
<% if @workout.exercises.any? %> 
  <ul><% @workout.exercises.each do |exercise| %> 
    <li><strong><%= link_to exercise.name, exercise %></strong></li> 
    <li>Sets: <%= exercise.sets %></li>
    <li>Reps: <%= exercise.reps %></li>
    <li>Weight: <%= exercise.weight %></li>
  <% end %> 
<% else %> 
  <p><strong>Please add some exercises to this workout</strong></p>
<% end %> 

</br>

<%= link_to 'Edit', edit_workout_path(@workout) %> |
<%= link_to 'Back', workouts_path %>
